# Application
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8088
APP_SECRET=your-secret-key-here

# Database
DB_HOST=mariadb
DB_PORT=3306
DB_NAME=Jobs
DB_USER=root
DB_PASSWORD=password
MYSQL_DSN=mysql:host=${DB_HOST};dbname=${DB_NAME};port=${DB_PORT};charset=utf8mb4;collation=utf8mb4_unicode_ci;user=${DB_USER};password=${DB_PASSWORD}

# MariaDB Configuration
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=Jobs
MYSQL_COLLATION=utf8mb4_unicode_ci
MYSQL_CHARSET=utf8mb4

# PhpMyAdmin Configuration
PMA_USER=root
PMA_PASSWORD=password
PMA_HOSTS=mariadb

# Timezone
TZ=America/Chicago

# Docker
DOCKER_PHP_VERSION=8.1
DOCKER_MARIADB_VERSION=10.6

# Development Tools
XDEBUG_MODE=debug,develop,coverage
XDEBUG_SESSION=PHPSTORM

# Optional: AWS Configuration (if needed)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_DEFAULT_REGION=your-region

# Optional: GitHub Configuration (if needed)
# GITHUB_TOKEN=your-github-token 